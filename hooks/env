#!/bin/bash

[ -n "$SOURCE_BRANCH" ]  || SOURCE_BRANCH=$(git symbolic-ref -q --short HEAD) 

IMAGE_NAME_TAG=$(echo $IMAGE_NAME |  cut -d ':' -f 2)

if ([[ $SOURCE_BRANCH = "prod" ]] || [[ $SOURCE_BRANCH == *.*.* ]]) && [[ $CACHE_TAG !=   *.*.*-staging ]] ; then 
        ANGULAR_MODE="production"
else
        ANGULAR_MODE="stage"
fi
